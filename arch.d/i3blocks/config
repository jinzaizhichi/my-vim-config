# i3blocks config - Black Metal Venom theme

[network]
command=~/.config/i3/scripts/network-speed.sh
interval=2
color=#87afaf

[cpu]
command=echo "󰻠 $(top -bn1 | grep "Cpu(s)" | awk '{print $2}')%"
interval=2
color=#af5f5f

[memory]
command=free -h | awk '/Mem:/ {print "󰍛 " $3 "/" $2}'
interval=5
color=#5f87af

[disk]
command=echo "󰋊 $(df -h / | awk 'NR==2 {print $3 "/" $2}')"
interval=30
color=#87875f
