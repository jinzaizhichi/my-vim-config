set $mod Mod4

font  pango:Iosevka Nerd Font Mono 14

# ============================================================================
# Window decoration / styling
# ============================================================================

default_border pixel 2
smart_borders on

# Force borders on all windows (override app requests)
for_window [class=".*"] border pixel 2

# Window colors (Black Metal Venom theme)
#                       border  backgr  text    indicator child_border
client.focused          #2a0f0d #121212 #c1c1c1 #2a0f0d   #2a0f0d
client.focused_inactive #222222 #121212 #999999 #222222   #222222
client.unfocused        #121212 #000000 #666666 #121212   #121212
client.urgent           #2a0f0d #2a0f0d #f8f7f2 #2a0f0d   #2a0f0d
client.placeholder      #000000 #000000 #666666 #000000   #000000
client.background       #000000

# ============================================================================

# autostart .desktop files (XDG autostart)
exec --no-startup-id dex --autostart --environment i3

# xscreensaver watcher: show bar and start tray apps only after unlock
exec --no-startup-id xscreensaver-command -watch | while read event; do \
    case "$event" in \
        UNBLANK*) i3-msg bar mode dock; pgrep -x nm-applet || nm-applet & ;; \
        LOCK*) i3-msg bar mode invisible ;; \
    esac; \
done

# volume control (pactl/PulseAudio)
set $refresh_i3status killall -SIGUSR1 i3status

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# launcher
bindsym $mod+d exec "rofi -modi drun,run -show drun"

# clipboard history
bindsym $mod+c exec CM_LAUNCHER=rofi clipmenu

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal/vertical
bindsym $mod+semicolon split h; exec --no-startup-id notify-send -t 1000 "Split" "Horizontal ─"
bindsym $mod+apostrophe split v; exec --no-startup-id notify-send -t 1000 "Split" "Vertical │"

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus parent/child
bindsym $mod+bracketleft  focus parent
bindsym $mod+bracketright focus child

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"

# initialize all 6 workspaces on startup (so they show in bar initially)
exec --no-startup-id i3-msg 'workspace 6; workspace 5; workspace 4; workspace 3; workspace 2; workspace 1'

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec --no-startup-id "rofi -dmenu -p 'Exit i3?' -lines 2 <<< $'Yes\nNo' | grep -q '^Yes$' && i3-msg '[class=.*] kill' && sleep 0.5 && i3-msg exit"

mode "resize" {
        # Smart resize - direction depends on window position
        bindsym h exec --no-startup-id ~/.config/i3/scripts/smart-resize.sh h
        bindsym j exec --no-startup-id ~/.config/i3/scripts/smart-resize.sh j
        bindsym k exec --no-startup-id ~/.config/i3/scripts/smart-resize.sh k
        bindsym l exec --no-startup-id ~/.config/i3/scripts/smart-resize.sh l
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

bar {
        status_command i3blocks -c ~/.config/i3blocks/config
        workspace_command ~/.config/i3/scripts/workspace-render.sh
        font pango:Iosevka Nerd Font Mono 16
        mode dock
        separator_symbol "  "
        workspace_min_width 25
        tray_padding 4

        colors {
                # Black Metal Venom theme
                background #000000
                statusline #999999
                separator  #333333

                #                  border  backgr  text
                focused_workspace  #2a0f0d #2a0f0d #f8f7f2
                active_workspace   #333333 #222222 #c1c1c1
                inactive_workspace #000000 #000000 #666666
                urgent_workspace   #2a0f0d #2a0f0d #f8f7f2
                binding_mode       #2a0f0d #121212 #c1c1c1
        }
}
