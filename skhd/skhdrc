# Navigation between spaces (desktops)
ctrl + alt - 1 : yabai -m space --focus 1
ctrl + alt - 2 : yabai -m space --focus 2
ctrl + alt - 3 : yabai -m space --focus 3
ctrl + alt - 4 : yabai -m space --focus 4
ctrl + alt - 5 : yabai -m space --focus 5
ctrl + alt - 6 : yabai -m space --focus 6
ctrl + alt - 7 : yabai -m space --focus 5
ctrl + alt - 8 : yabai -m space --focus 6
ctrl + alt - 9 : yabai -m space --focus 5
ctrl + alt - 10 : yabai -m space --focus 6

# Cycle through spaces
ctrl + alt - left : yabai -m space --focus prev || yabai -m space --focus last
ctrl + alt - right : yabai -m space --focus next || yabai -m space --focus first

# Move window to different space
ctrl + alt + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
ctrl + alt + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
ctrl + alt + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
ctrl + alt + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4
ctrl + alt + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5
ctrl + alt + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6
ctrl + alt + shift - 7 : yabai -m window --space 7; yabai -m space --focus 7
ctrl + alt + shift - 8 : yabai -m window --space 8; yabai -m space --focus 8
ctrl + alt + shift - 9 : yabai -m window --space 7; yabai -m space --focus 7
ctrl + alt + shift - 10 : yabai -m window --space 8; yabai -m space --focus 8

# Navigate between windows (vim keys)
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north
ctrl + alt - l : yabai -m window --focus east

# Swap windows
ctrl + alt + shift - h : yabai -m window --swap west
ctrl + alt + shift - j : yabai -m window --swap south
ctrl + alt + shift - k : yabai -m window --swap north
ctrl + alt + shift - l : yabai -m window --swap east

# Resize windows (easier bindings)
ctrl + cmd - h : yabai -m window --resize left:-50:0 || yabai -m window --resize right:-50:0
ctrl + cmd - j : yabai -m window --resize bottom:0:50 || yabai -m window --resize top:0:50
ctrl + cmd - k : yabai -m window --resize top:0:-50 || yabai -m window --resize bottom:0:-50
ctrl + cmd - l : yabai -m window --resize right:50:0 || yabai -m window --resize left:50:0

# Toggle window float
ctrl + alt - space : yabai -m window --toggle float

# Toggle fullscreen
ctrl + alt - f : yabai -m window --toggle zoom-fullscreen

# Rotate tree
ctrl + alt - r : yabai -m space --rotate 90

# Balance space
ctrl + alt - b : yabai -m space --balance

# Cycle through layout modes
ctrl + alt - t : yabai -m space --layout bsp
ctrl + alt - s : yabai -m space --layout stack
ctrl + alt - d : yabai -m space --layout float

# Create new space and follow
ctrl + alt - c : yabai -m space --create && \
                 index="$(yabai -m query --spaces --display | jq 'map(select(."is-native-fullscreen" == false))[-1].index')" && \
                 yabai -m space --focus "${index}"

# Destroy current space
ctrl + alt - q : yabai -m space --destroy

# Move space to next/prev display
ctrl + alt + cmd - left : yabai -m space --display prev
ctrl + alt + cmd - right : yabai -m space --display next

# Close focused window
ctrl + alt - w : yabai -m window --close

# Toggle window split (horizontal/vertical)
ctrl + alt - e : yabai -m window --toggle split

# Mirror tree (flip layout)
ctrl + alt - x : yabai -m space --mirror x-axis
ctrl + alt - y : yabai -m space --mirror y-axis

# Cycle through windows in stack
ctrl + alt - n : yabai -m window --focus stack.next || yabai -m window --focus stack.first
ctrl + alt - p : yabai -m window --focus stack.prev || yabai -m window --focus stack.last

# Toggle padding and gaps
ctrl + alt - g : yabai -m space --toggle padding; yabai -m space --toggle gap
